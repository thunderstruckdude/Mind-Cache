
{
  "manifest_version": 2,
  "name": "Study Queue",
  "version": "1.0",
  "description": "Queue selected text for later research with Google Search and ChatGPT",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}